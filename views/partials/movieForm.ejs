<form action="<%= action %>" method="post">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= movie ? movie.title : '' %>"" required>

        <label for=" genre">Select Genres</label>
    <select name="genre" id="genre" multiple>
        <% const genres=["Action", "Adventure", "Comedy", "Crime", "Drama", "Fantasy", "Horror", "Romance", "Satire", "Sci-Fi", "Thriller"]; %>

            <% genres.forEach(genre=> { %>
                <option value="<%= genre %>" <%= movie && movie.genre.includes(genre) ? "selected" : '' %>><%= genre %></option>
            <% }); %>
    </select>

    <label for="length">Length</label>
    <input type="number" id="length" name="length" min="0" step="1" value="<%= movie ? movie.length : '' %>" required>

    <label for="releaseDate">Release Date</label>
    <input type="date" name="releaseDate" id="releaseDate" value="<%= movie ? movie.releaseDate.toISOString().split('T')[0] : '' %>" required>

    <label for="image">Image URL</label>
    <input type="text" id="image" name="image" value="<%= movie ? movie.image : '' %>" required>

    <button type="submit"><%= buttonText %></button>
</form>