<form action="<%= action %>" method="post">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= book ? book.title : '' %>"" required>

    <label for="genre">Select Genres</label>
    <select name="genre" id="genre" multiple>
        <% const genres = ["Fantasy","Sci-Fi","Adventure","Romance","Horror","Mistery","Thriller","Historical","Contemporary Fiction","Biography","Essay","Science","Self Help","Memoir"]; %>

        <% genres.forEach(genre => { %>
            <option value="<%= genre %>" <%= book && book.genre.includes(genre) ? "selected" : '' %>><%= genre %></option>
        <% }); %>
    </select>

    <label for="author">Author</label>
    <input type="text" id="author" name="author" value="<%= book ? book.author : '' %>" required>

    <label for="image">Image URL</label>
    <input type="text" id="image" name="image" value="<%= book ? book.image : '' %>" required>

    <button type="submit"><%= buttonText %></button>
</form>